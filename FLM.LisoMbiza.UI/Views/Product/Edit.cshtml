@model FLM.LisoMbiza.ProductBranches

@{
    ViewData["Title"] = "Product";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" readonly />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" maxlength="100" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightedItem" class="control-label"></label>
                <input asp-for="WeightedItem" class="form-control" />
                <span asp-validation-for="WeightedItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuggestedSellingPrice" class="control-label"></label>
                <input asp-for="SuggestedSellingPrice" class="form-control" />
                <span asp-validation-for="SuggestedSellingPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update Product" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<p>
    <a asp-action="Assign" asp-route-ID="@Model.ID">Assign to Branch</a>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


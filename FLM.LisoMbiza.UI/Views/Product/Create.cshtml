@model FLM.LisoMbiza.Product

@{
    ViewData["Title"] = "Product";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightedItem" class="control-label"></label>
                <input asp-for="WeightedItem" class="form-control" required />
                <span asp-validation-for="WeightedItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuggestedSellingPrice" class="control-label"></label>
                <input asp-for="SuggestedSellingPrice" class="form-control" required />
                <span asp-validation-for="SuggestedSellingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}